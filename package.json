{
    "name": "powershell",
    "displayName": "Replacement Powershell Language Basics",
    "description": "Provides snippets, improved syntax highlighting, bracket matching and folding in Powershell files",
    "version": "1.0.0",
    "publisher": "msftrncs",
    "license": "MIT",
    "engines": {
        "vscode": "*"
    },
    "contributes": {
        "languages": [
            {
                "id": "powershell",
                "extensions": [
                    ".ps1",
                    ".psm1",
                    ".psd1",
                    ".pssc",
                    ".psrc"
                ],
                "aliases": [
                    "PowerShell",
                    "powershell",
                    "ps",
                    "ps1"
                ],
                "firstLine": "^#!\\s*/.*\\bpwsh\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "powershell",
                "scopeName": "source.powershell",
                "path": "./syntaxes/powershell.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "powershell",
                "path": "./snippets/powershell.code-snippets"
            }
        ]
    }
}