{
    "name": "full-statement-powershell-syntax",
    "displayName": "Full Statement Powershell Language Syntax",
    "description": "Provide full statement syntax highlighting for PowerShell",
    "version": "1.0.0",
    "publisher": "msftrncs",
    "license": "MIT",
    "engines": {
        "vscode": "^1.0.0"
    },
	"repository": {
		"url": "https://github.com/msftrncs/full-statement-powershell-syntax",
		"type": "git"
	},
    "categories": [
		"Programming Languages"
	],
	"author": {
		"name": "Carl Morris"
	},
    "keywords": [
        "PowerShell",
        "ps1",
        "shell",
        "syntax",
        "textmate"
    ],
    "contributes": {
        "grammars": [
            {
                "language": "powershell",
                "scopeName": "source.powershell",
                "path": "./syntaxes/powershell.tmLanguage.json",
                "balancedBracketScopes": [
                    "punctuation"
                ],
                "unbalancedBracketScopes": [ "punctuation.definition.variable" ]
            }
        ]
    }
}